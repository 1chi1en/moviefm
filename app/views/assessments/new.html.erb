<!doctype html>
<html lang="ja">
 
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
 
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
 
    <title>あみそのからあげ王国</title>
</head>
 
<body>
    <br>
    <h1>Movie for me</h1>
    <br>
 <%= form_with model: @assessment, class: 'article-form', local: true do |f| %>
    <div class="border col-7">
        <br>
        <h2>映画の感想を書く</h2>
        <br>
        <div class="row">
            <div class="col-md">
                    <div class="form-group">
                        <label>感想：</label>
                        <%= f.text_area :impression, class:"form-control", id:"title"%>
                    </div>
                    
                    <div class="form-group">
                        <label>点数：</label>
                        <%= f.text_field :rate, class:"form-control", id:"director"%>
                    </div>

                    <div class="form-group">
                        <label>良かった点：</label>
                        <%= f.text_area :goodthings, class:"form-control", id:"release"%>
                    </div>

                    <div class="form-group">
                        <label>良くなかった点：</label>
                        <%= f.text_area :badthings, class:"form-control", id:"release"%>
                    </div>

            </div>
        </div>
        <div class="row center-block text-center">
            <div class="col-1">
            </div>
            <div class="col-5">
                <button type="button" class="btn btn-outline-secondary btn-block">閉じる</button>
            </div>
            <div class="col-5">
            <%= f.submit "映画を登録する" ,class:"btn btn-outline-primary btn-block" %>
            </div>
        </div>

  <% end %>
 
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
</body>
 
</html>