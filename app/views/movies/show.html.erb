<div class="contents row">
  <div class="container">
    <h3>編集する</h3>
    <%= form_with(model: @movie, local: true) do |form| %>
      <%= form.text_field :title, placeholder: "Nickname" %>
      <%= form.text_field :director, placeholder: "Image Url" %>
      <%= form.text_field :release, placeholder: "Image Url" %>
      <%= form.text_area :storyline, placeholder: "text", rows: "10" %>
      <%= form.submit "SEND" %>
    <% end %>
  </div>
</div>